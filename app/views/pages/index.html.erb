<%= content_for(:title, 'Welcome To Your Online Banking') %>
<h1>
  My Bank
</h1>
<div class="row">
  <div class="pull-right">
    <%= button_to "Logout", destroy_user_session_path, :id => "logout-path",
          :class => "btn btn-danger btn-sm", :method => :delete %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= button_to "New Account", new_account_path, :id => "open-new-account-path",
          :class => "btn btn-primary", :method => :get %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2>
      Number Of Accounts <%= number_of_accounts %>
    </h2>
    <h2>
      Number Of Clients <%= number_of_users %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to accounts_path do %>
      <i class="fa fa-building"></i>
      Accounts
    <% end %>
  </div>
</div>
